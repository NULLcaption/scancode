<!--index.wxml-->
<scroll-view scroll-y style='height:100vh'>
  <!-- 微信获取到的信息 -->
  <view class='top'>
    <view>
      <view class='img'>
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view class='text'>
        <open-data type="userNickName"></open-data>
      </view>
    </view>
  </view>
  <!-- 扫一扫按钮 -->
  <view class='btn active' bindtap='submitFun'>扫一扫</view>
  <view class='btn1 active' bindtap='submitFun1'>查看已参加活动</view>
</scroll-view>